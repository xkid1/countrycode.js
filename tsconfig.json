{
  "compilerOptions": {
    "target": "ES2020",
    "outDir": "dist",
    "types": ["node"],
    "module": "ESNext",
    "rootDir": ".",
    "baseUrl": ".",
    "esModuleInterop": true,
    "declaration": false,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": false,
    "noUnusedLocals": true,
    "noImplicitOverride": true,
    "useUnknownInCatchVariables": false,
    "noImplicitAny": false,
    "paths": {
      "~/*": ["src/*"]
    }
  },

  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "**/node_modules/*"]
}
